<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item  android:state_pressed="true" >
        //Here you can set style you want when Button is pressed
        <shape>
            <gradient
                android:startColor="#ff431b64"
                android:endColor="#ff0c6e8c"
                android:centerColor="#ff9fd2aa"
                android:angle="90"></gradient>

            <stroke
                android:width="1dp"
                android:color="#ff5a34de" />
            <corners
                android:radius="15dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />

        </shape>
    </item>
    <item>
        //Here you can set style you want when button is not pressed
        <shape>
            <gradient
                android:startColor="#ffa7984b"
                android:endColor="#ff8c3226"
                android:centerColor="#ff72438c"
                android:angle="90"
                android:gradientRadius="15dp"></gradient>


            <stroke
                android:width="1dp"
                android:color="#9999DE" />
            <corners
                android:radius="20dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
</selector>